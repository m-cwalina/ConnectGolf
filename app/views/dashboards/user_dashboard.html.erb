<div class="navbar">
  <div class="navbar-logo">
    <%= image_tag "golf-logo.png", class: "logo-image"%>
  </div>
  <div class="navbar-links">
    <a><%=link_to 'Home', home_path%></a>
    <% if user_signed_in? %>
      <a><%= link_to "Dashboard", user_dashboard_path %></a>
      <a><%=link_to "Log Out", destroy_user_session_path%></a>
    <% else %>
      <a><%=link_to "Sign In", new_user_session_path %></a>
      <a><%=link_to 'About', about_path%></a>
    <% end %>
  </div>
</div>
<div class='title-club-container'>
  <h1><%= @user.club.name %></h1>
</div>

<div class='flex-container'>
  <div class='news-container'>
    <h2>News Feed</h2>
    <% @user.club.posts.map do |post| %>
      <ul><li><%= post.content %></ul></li>
    <% end %>
  </div>


  <div class='teetime-container'>
    <h2>Tee Times</h2>
    <% if @tee_times.any? %>
      <% @tee_times.map do |tee_time|%>
        <ul><li><%= tee_time.time.strftime('%a %b %-d %I:%M%p') %></ul></li>
      <% end %>
    <% else %>
      <h2>You have no tee times at the moment</h2>
    <% end %>
  </div>
</div>

<div class='button-container'>
  <%=link_to tee_times_path do %>
    <button type="button" class="btn btn-outline-success btn-lg">Tee Times</button>
  <% end %>
  <%=link_to users_path do %>
    <button type="button" class="btn btn-outline-success btn-lg">Members</button>
  <% end %>
  <%=link_to friendships_path do %>
    <button type="button" class="btn btn-outline-success btn-lg">Friends</button>
  <% end %>
</div>
